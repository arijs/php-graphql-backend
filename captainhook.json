{
    "config": {
        "verbosity": "normal"
    },
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\Ramsey\\CaptainHook\\ValidateConventionalCommit"
            }
        ]
    },
    "pre-push": {
        "enabled": false,
        "actions": []
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "php ~/composer.phar normalize --indent-size=1 --indent-style=tab --ansi",
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
                        "args": [
                            ["composer.json"]
                        ]
                    }
                ]
            },
            {
                "action": "php ~/composer.phar pre-commit {$STAGED_FILES|of-type:php}"
            },
            {
                "action": "git add {$STAGED_FILES}"
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\Ramsey\\CaptainHook\\PrepareConventionalCommit"
            }
        ]
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": true,
        "actions": [
            {
                "action": "php ~/composer.phar install --ansi",
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileChanged\\Any",
                        "args": [
                            ["composer.json", "composer.lock"]
                        ]
                    }
                ]
            }
        ]
    },
    "post-checkout": {
        "enabled": true,
        "actions": [
            {
                "action": "php ~/composer.phar install --ansi",
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileChanged\\Any",
                        "args": [
                            ["composer.json", "composer.lock"]
                        ]
                    }
                ]
            }
        ]
    }
}
